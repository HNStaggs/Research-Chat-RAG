# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hr_metrics_db

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=hr-metrics-index

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_CONTAINER=hr-metrics-container
AZURE_SEARCH_SERVICE_NAME=your-search-service
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_BING_SEARCH_KEY=your-bing-search-key
AZURE_KEY_VAULT_NAME=your-keyvault

# Model Settings
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-opus-20240229
EMBEDDING_MODEL=llama-text-embed-v2

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=development

# Cache Settings
CACHE_TTL=3600  # Time to live for cached articles in seconds
MAX_CACHE_SIZE=1000  # Maximum number of articles to cache
CACHE_CLEANUP_INTERVAL=86400  # Cache cleanup interval in seconds (24 hours)

# Search Settings
MAX_SEARCH_RESULTS=50
MIN_RELEVANCE_SCORE=0.7
SEARCH_CACHE_TTL=1800  # Time to live for search results in seconds

# HR Metrics Settings
METRICS_UPDATE_INTERVAL=3600  # Metrics update interval in seconds
BENCHMARK_UPDATE_INTERVAL=86400  # Benchmark update interval in seconds
MAX_METRICS_HISTORY=365  # Maximum number of days to keep metrics history

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # Rate limit period in seconds

# Monitoring
ENABLE_METRICS_COLLECTION=True
METRICS_EXPORT_INTERVAL=300  # Metrics export interval in seconds

# Optional: External Service Integration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here  # For notifications
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_specific_password_here

# Optional: Analytics
ENABLE_ANALYTICS=True
ANALYTICS_API_KEY=your_analytics_api_key_here

# Optional: Backup Settings
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # Backup interval in seconds
BACKUP_RETENTION_DAYS=30

# Optional: Feature Flags
ENABLE_HR_METRICS_ANALYSIS=True
ENABLE_BENCHMARK_COMPARISON=True
ENABLE_PREDICTIVE_ANALYTICS=True
ENABLE_CUSTOM_REPORTING=True 